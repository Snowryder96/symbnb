{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminBookingController!{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des Reservation</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th>Dur√©e</th>
                <th>Montant</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            {% for booking in bookings %}
            <tr>
                <td>{{booking.id}}</td>
                <td>{{booking.createdAt|date('d/m/Y')}}</td>
                <td><img src="{{booking.booker.picture}}" alt="Avatar de {{booking.booker.picture}}" class="avatar avatar-mini mr-2"> {{booking.booker.fullName}}</td>
                <td >{{booking.ad.title}}</td>
                <td >{{booking.duration}} jour(s)</td>
                <td >{{booking.amount | number_format(2, ',', ' ')}}&euro;</td>
                <td>
                    <a href="{{ path("admin_booking_edit", {'id': booking.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{ path("admin_booking_delete", {'id': booking.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}